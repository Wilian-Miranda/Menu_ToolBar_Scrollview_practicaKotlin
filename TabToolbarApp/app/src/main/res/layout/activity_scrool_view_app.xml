<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ScroolViewApp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp"
        android:padding="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ImageButton
                android:id="@+id/ib_naranjas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="fruitSelection"
                app:srcCompat="@drawable/naranjas" />

            <ImageButton
                android:id="@+id/ib_sandia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="fruitSelection"
                app:srcCompat="@drawable/sandia">
            </ImageButton>

            <ImageButton
                android:id="@+id/ib_mangos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="fruitSelection"
                app:srcCompat="@drawable/mangos" />

            <ImageButton
                android:id="@+id/ib_kiwis"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="fruitSelection"
                app:srcCompat="@drawable/kiwis" />

            <ImageButton
                android:id="@+id/ib_fresas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="fruitSelection"
                app:srcCompat="@drawable/fresas" />

            <ImageButton
                android:id="@+id/ib_frambuesas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="fruitSelection"
                app:srcCompat="@drawable/frambuesas" />

            <ImageButton
                android:id="@+id/ib_cerezas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="fruitSelection"
                app:srcCompat="@drawable/cerezas" />

            <ImageButton
                android:id="@+id/ib_bananas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="fruitSelection"
                app:srcCompat="@drawable/bananas" />
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>